<main>
    <div class="card">
        <h3 class="card-header">New Post</h3>
        <form class="card-body" id="add-post-form">
            <div class="form-floating mb-3">
                <label for="post-title" class="form-label"></label>
                <input type="text" id="post-title" name="post-title" class="form-input w-100" autofocus="true"
                    placeholder="Title" />
            </div>

            <div class="form-floating mb-3">
                <label class="form-label" for="content"></label>
                <textarea id="content" name="content" class="form-input w-100" aria-label="With textarea"
                    style="height: 300px" autofocus="true" placeholder="What's on your mind?"></textarea>
            </div>


            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-lg mb-3 text-light"
                    style="background-color:#6353c9; width: 200px;">Create Post</button>
            </div>
        </form>
    </div>
</main>

<script src="/js/add-post.js"></script>