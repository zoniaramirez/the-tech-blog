<div>
  {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body" data-comment-id="{{id}}">
            <div class="text">
              <p>{{comment_text}}</p>
            </div>
            <div>
              <p>-{{user.username}}, {{format_date created_at}} {{format_time created_at}}</p>
            </div>
            <button class="btn btn-primary mt-2 edit-comment-btn">Edit</button>
            <button type="submit" class="btn btn-primary mt-2 delete-comment-btn">Delete</button>
        </section>
    </div>
  {{/each}}
</div>
